@model Book

    <div class="container">
        <div class="jumbotron">
           <h2 class="text-center"> Create or Update Books</h2>

        </div>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Title">Title</label>
                <div><span asp-validation-for="Title" class="text-danger"></span></div>
                <input class="form-control" asp-for="Title  "/>
                
            </div>
            <div class="form-group">
                <label asp-for="Genre"></label>
                <div><span asp-validation-for="Genre" class="text-danger"></span></div>
                <input class="form-control" asp-for="Genre" />
                
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <div><span asp-validation-for="Year" class="text-danger"></span></div>
                <input class="form-control" asp-for="Year" />
                
            </div>
            <div class="form-group">
                
                <div class="form-group">
                    <label class="sr-only" asp-for="Price">Price (in dollars)</label>
                    <div class="input-group">
                        <div class="input-group-addon">$</div>
                        <div><span asp-validation-for="Price" class="text-danger"></span></div>
                        <input asp-for="Price" class="form-control"  placeholder="Price">
                        <div class="input-group-addon">.00</div>
                        
                    </div>
                </div>
                </div>
                @*<div class="form-group">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price"></span>
                </div>*@

                <div class="form-group">
                    <label asp-for="Publiser"></label>
                    <div><span asp-validation-for="Publiser" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Publiser" />
                    
                </div>
                <div class="form-group">
                    <label asp-for="AuthorID">Author Id</label>
                    <div><span asp-validation-for="AuthorID" class="text-danger"></span></div>
                    <input class="form-control" asp-for="AuthorID" />
                    
                </div>

                <button type="submit" class="btn btn-primary">Save Info</button>
                <a asp-action="Index" class="btn btn-default" asp-controller="Books">Cancel</a>
</form>
    </div>
